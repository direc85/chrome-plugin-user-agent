{
  "manifest_version": 2,

  "name": "User Agent single click switcher",
  "description": "Switch in one click between normal and custom User Agent",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },



  "options_page": "options.html",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon19_off.png",
    "default_title": "Click here!"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/"
  ]
}
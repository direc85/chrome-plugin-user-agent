{
  "manifest_version": 2,
  "name": "User-Agent switcher single click",
  "description": "Switch User-Agent in one click between normal and custom User-Agent.",
  "version": "1.2.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "author": "Xabier Legasa",
  "short_name": "User Agent switcher",
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon19_off.png",
    "default_title": "User-Agent switcher"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
